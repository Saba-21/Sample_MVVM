<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_navigation_graph"
        app:startDestination="@id/addingFragment">

    <fragment
            android:id="@+id/addingFragment"
            android:name="com.saba.sample_mvvm.presentation.add.AddingFragment"
            android:label="fragment_adding"
            tools:layout="@layout/fragment_adding">

        <action
                android:id="@+id/action_addingFragment_to_resultFragment"
                app:destination="@id/resultFragment"
                app:popUpTo="@id/resultFragment"
                app:popUpToInclusive="true"/>

    </fragment>

    <fragment
            android:id="@+id/resultFragment"
            android:name="com.saba.sample_mvvm.presentation.get.ResultFragment"
            android:label="fragment_result"
            tools:layout="@layout/fragment_result">

        <action
                android:id="@+id/action_resultFragment_to_addingFragment"
                app:destination="@id/addingFragment"
                app:popUpTo="@id/addingFragment"
                app:popUpToInclusive="true"/>

    </fragment>

</navigation>